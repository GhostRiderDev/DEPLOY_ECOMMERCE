{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ecommerce_back/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ecommerce_back/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ecommerce_back",
  "projects": {
    "ecommerce_back": {
      "type": "application",
      "root": "apps/ecommerce_back",
      "entryFile": "main",
      "sourceRoot": "apps/ecommerce_back/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ecommerce_back/tsconfig.app.json"
      }
    },
    "product-app": {
      "type": "application",
      "root": "apps/product-app",
      "entryFile": "main",
      "sourceRoot": "apps/product-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-app/tsconfig.app.json"
      }
    },
    "user-app": {
      "type": "application",
      "root": "apps/user-app",
      "entryFile": "main",
      "sourceRoot": "apps/user-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user-app/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-app": {
      "type": "application",
      "root": "apps/auth-app",
      "entryFile": "main",
      "sourceRoot": "apps/auth-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-app/tsconfig.app.json"
      }
    }
  }
}